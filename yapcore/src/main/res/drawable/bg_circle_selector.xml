<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:innerRadius="5dp" android:shape="ring" android:useLevel="false">
            <solid android:color="@color/transparent" />
            <stroke android:width="2dp" android:color="@color/greyLight" />
            <size android:width="@dimen/_15sdp" android:height="@dimen/_15sdp" />
            <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
        </shape>

    </item>
    <item>
        <shape android:innerRadius="5dp" android:shape="ring"  android:useLevel="false">
            <solid android:color="@android:color/holo_orange_light" />
            <padding android:left="3dp" android:right="3dp" />
        </shape>
    </item>
</selector>