<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="co.yap.translation.Strings" />

        <import type="co.yap.yapcore.helpers.extentions.CurrencyExtensionsKt" />

        <import type="co.yap.yapcore.helpers.StringUtils" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="co.yap.sendmoney.fundtransfer.viewmodels.TransferSuccessViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSuccess"
                style="@style/Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:text="@{viewModel.state.successHeader}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/screen_crash_transfer_success_display_text_title" />


            <co.yap.widgets.CoreCircularImageView
                android:id="@+id/ivUserImage"
                android:layout_width="@dimen/_62sdp"
                android:layout_height="@dimen/_62sdp"
                android:layout_marginTop="@dimen/margin_large"
                app:colorType="@{`Beneficiary`}"
                app:fullName="@{viewModel.parentViewModel.beneficiary.fullName()}"
                app:imageUrl="@{viewModel.parentViewModel.beneficiary.beneficiaryPictureUrl}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSuccess"
                app:position="@{viewModel.parentViewModel.transferData.position ?? 0}" />

            <View
                android:id="@+id/barrier"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="@+id/ivUserImage"
                app:layout_constraintStart_toStartOf="@+id/ivUserImage"
                app:layout_constraintTop_toTopOf="@+id/ivUserImage" />

            <View
                android:id="@+id/barrier2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivUserImage"
                app:layout_constraintStart_toStartOf="@+id/ivUserImage"
                app:layout_constraintTop_toTopOf="@+id/ivUserImage" />

            <RelativeLayout
                android:id="@+id/rlAddNewProfilePic"
                android:layout_width="47dp"
                android:layout_height="49dp"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:layout_marginEnd="@dimen/_35sdp"
                android:visibility="@{viewModel.state.flagLayoutVisibility? View.VISIBLE:View.GONE}"
                app:layout_constraintBottom_toTopOf="@+id/barrier2"
                app:layout_constraintEnd_toEndOf="@+id/barrier"
                app:layout_constraintTop_toTopOf="@+id/ivUserImage"
                tools:visibility="visible">

                <FrameLayout
                    android:layout_width="@dimen/_29sdp"
                    android:layout_height="@dimen/_29sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_2sdp"
                    android:background="@drawable/bg_round_red"
                    android:backgroundTint="@color/white"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/ivAddProfilePic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/bitmap"
                        android:contentDescription="@string/empty_string"
                        app:setFlagDrawable="@{viewModel.parentViewModel.beneficiary.country.toString()}" />

                </FrameLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvBeneficiaryName"
                style="@style/Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:gravity="center"
                android:text="@{viewModel.parentViewModel.beneficiary.fullName()}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivUserImage"
                tools:text="Bernard Erickson" />

            <TextView
                android:id="@+id/tvTransferCaption"
                style="@style/MicroGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@{viewModel.state.transferAmountHeading}"
                android:textSize="@dimen/text_size_c3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBeneficiaryName"
                tools:text="@string/screen_crash_transfer_success_display_text_transfer" />

            <TextView
                android:id="@+id/tvAmount"
                style="@style/Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="center"
                android:text="@{CurrencyExtensionsKt.toFormattedCurrency(viewModel.parentViewModel.transferData.transferAmount,true,viewModel.parentViewModel.transferData.destinationCurrency,true)}"
                android:textSize="@dimen/text_size_h5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTransferCaption"
                tools:text="AED 410.00" />

            <FrameLayout
                android:id="@+id/flTransactionComplete"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/transaction_complete_selector"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAmount"
                tools:visibility="visible">


                <ImageView
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center_vertical|center"
                    android:contentDescription="@string/empty_string"
                    android:src="@drawable/ic_check" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvAvailableBalance"
                style="@style/MicroGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:layout_marginEnd="@dimen/margin_medium_large"
                android:gravity="center"
                android:text="@{viewModel.state.availableBalanceString}"
                android:textAlignment="center"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/flTransactionComplete"
                tools:text="Your available balance is " />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:visibility="@{viewModel.parentViewModel.transferData.cutOffTimeMsg==null || viewModel.parentViewModel.transferData.cutOffTimeMsg.isEmpty()? View.GONE:View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/flTransactionComplete"
                app:srcCompat="@drawable/ic_access_alarm" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCutOffTime"
                style="@style/MicroGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:gravity="center"
                android:text="@{viewModel.state.cutOffMessage}"
                android:visibility="@{viewModel.parentViewModel.transferData.cutOffTimeMsg.isEmpty()? View.GONE:View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatImageView"
                tools:text="Transfers made before 2:00 PM UAE time will be processed on the same day. All transfers made after this time will be carried out on the next business day" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/llData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/card_border_selector"
                android:paddingTop="@dimen/margin_medium"
                android:paddingBottom="@dimen/margin_medium"
                app:layout_constraintBottom_toTopOf="@+id/confirmButton"
                app:layout_constraintTop_toBottomOf="@+id/tvCutOffTime"
                app:layout_constraintVertical_bias="0.900"
                tools:layout_editor_absoluteX="21dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvIdCode"
                        style="@style/MicroGrey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/screen_crash_transfer_success_display_text_reference_number"
                        android:textSize="@dimen/text_size_c3"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/tvReferenceNumber"
                        style="@style/Large"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_extra_small"
                        android:gravity="center"
                        android:text="@{viewModel.parentViewModel.transferData.referenceNumber}"
                        android:textSize="@dimen/text_size_h5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvIdCode"
                        tools:text="00313249457" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <co.yap.widgets.CoreButton
                android:id="@+id/confirmButton"
                style="@style/FragmentsBtnStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:btn_size="medium"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/margin_extra_large"
                android:enabled="true"
                android:onClick="@{(v) -> viewModel.handlePressOnButtonClick(v.id)}"
                android:text="@{viewModel.state.buttonTitle}"
                app:btn_enable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteX="44dp"
                tools:text="@string/screen_crash_transfer_success_button_text_back" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>